@model Brand

<form action="/Brands/BrandConfirmation" method="post">

    <div class="col-md-4">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" placeholder="Enter a Laptop Name">
        <br /><br />
        <label asp-for="Id" class="form-label"></label>
        <input type="text" asp-for="Id" placeholder="Enter an Id number">
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>